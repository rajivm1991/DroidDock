{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DroidDock",
  "version": "0.2.2",
  "identifier": "com.rajivm1991.droiddock",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "DroidDock",
        "width": 1000,
        "height": 700,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main app capabilities",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "shell:allow-execute",
            "shell:allow-open",
            "dialog:allow-save",
            "dialog:allow-open"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/rajivm1991/DroidDock/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ5RTc2MjZGN0NFRTM2MTUKUldRVk51NThiMkxuU1pCVjNuYkswd2NpSGE1OTNmemkzeUFObFNpUDRNQ3pRNjNpOEhVRVBJdU8K"
    }
  }
}
